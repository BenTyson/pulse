---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import { getArticles, getCategoriesWithCounts } from '../../lib/supabase';
import type { Article } from '../../lib/database.types';

const url = Astro.url;
const currentPage = parseInt(url.searchParams.get('page') || '1');
const pageSize = 12;

let articles: Article[] = [];
let categories: { category: string; count: number }[] = [];

try {
  [articles, categories] = await Promise.all([
    getArticles({ limit: pageSize, offset: (currentPage - 1) * pageSize }),
    getCategoriesWithCounts(),
  ]);
} catch (error) {
  console.error('Error fetching articles:', error);
}

const hasMore = articles.length === pageSize;
---

<BaseLayout
  title="News"
  description="Latest news and updates from the graphene industry. Stay informed about research breakthroughs, business developments, and new applications."
>
  <div class="max-w-5xl mx-auto px-6 py-16">
    <!-- Header -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-white mb-4">Latest News</h1>
      <p class="text-text-secondary text-lg max-w-2xl">
        Stay up to date with the latest developments in graphene research, business, and applications.
      </p>
    </div>

    <!-- Category Filters -->
    <div class="flex flex-wrap gap-2 mb-10">
      <a
        href="/news"
        class="badge bg-white text-black border-white"
      >
        All
      </a>
      {categories.map((cat) => (
        <a
          href={`/category/${cat.category}`}
          class="badge hover:border-silver-dark transition-colors capitalize"
        >
          {cat.category}
          <span class="ml-1 opacity-50">({cat.count})</span>
        </a>
      ))}
    </div>

    <!-- Articles Grid -->
    {articles.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-px bg-border mb-12">
        {articles.map((article) => (
          <div class="bg-bg-primary">
            <ArticleCard article={article} />
          </div>
        ))}
      </div>
    ) : (
      <div class="text-center py-24 border border-border rounded-lg">
        <h2 class="text-xl font-semibold text-white mb-2">No articles yet</h2>
        <p class="text-text-secondary">Check back soon for the latest graphene news.</p>
      </div>
    )}

    <!-- Pagination -->
    {(currentPage > 1 || hasMore) && (
      <div class="flex items-center justify-center gap-4">
        {currentPage > 1 && (
          <a
            href={`/news?page=${currentPage - 1}`}
            class="px-5 py-2 border border-border text-text-secondary rounded-md hover:border-silver-dark hover:text-white transition-colors text-sm"
          >
            Previous
          </a>
        )}
        <span class="text-text-muted text-sm">Page {currentPage}</span>
        {hasMore && (
          <a
            href={`/news?page=${currentPage + 1}`}
            class="px-5 py-2 border border-border text-text-secondary rounded-md hover:border-silver-dark hover:text-white transition-colors text-sm"
          >
            Next
          </a>
        )}
      </div>
    )}
  </div>
</BaseLayout>
