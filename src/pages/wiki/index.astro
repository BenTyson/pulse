---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getWikiPages } from '../../lib/supabase';

let wikiPages: any[] = [];

try {
  wikiPages = await getWikiPages();
} catch (error) {
  console.error('Error fetching wiki pages:', error);
}

// Define page metadata with icons and descriptions
const pageMetadata: Record<string, { icon: string; tagline: string }> = {
  'what-is-graphene': {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-6 h-6"><circle cx="12" cy="12" r="3"/><path d="M12 2v4m0 12v4M2 12h4m12 0h4m-3.5-6.5L16 7m-8 10l-1.5 1.5m11-1.5L16 17M7 7L5.5 5.5"/></svg>`,
    tagline: 'The fundamentals'
  },
  'properties': {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-6 h-6"><path d="M3 3v18h18"/><path d="M7 14l4-4 4 4 5-5"/></svg>`,
    tagline: 'Physical characteristics'
  },
  'applications': {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-6 h-6"><rect x="2" y="3" width="20" height="14" rx="2"/><path d="M8 21h8m-4-4v4"/></svg>`,
    tagline: 'Real-world uses'
  },
  'glossary': {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-6 h-6"><path d="M4 19.5A2.5 2.5 0 016.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 014 19.5v-15A2.5 2.5 0 016.5 2z"/><path d="M8 7h8m-8 4h6"/></svg>`,
    tagline: 'A-Z terminology'
  }
};

const featuredPage = wikiPages.find(p => p.slug === 'what-is-graphene');
const otherPages = wikiPages.filter(p => p.slug !== 'what-is-graphene');
---

<BaseLayout
  title="Wiki"
  description="The comprehensive graphene knowledge base. Learn about properties, production methods, applications, and more."
>
  <div class="relative overflow-hidden">
    <!-- Hexagon Pattern Background -->
    <div class="absolute inset-0 opacity-[0.03] pointer-events-none">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="hexagons" width="50" height="43.4" patternUnits="userSpaceOnUse" patternTransform="scale(2)">
            <polygon
              fill="none"
              stroke="currentColor"
              stroke-width="0.5"
              points="24.8,22 37.3,29.2 37.3,43.7 24.8,50.9 12.3,43.7 12.3,29.2"
              transform="translate(-12,-22)"
            />
            <polygon
              fill="none"
              stroke="currentColor"
              stroke-width="0.5"
              points="24.8,22 37.3,29.2 37.3,43.7 24.8,50.9 12.3,43.7 12.3,29.2"
              transform="translate(13,-0.2)"
            />
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#hexagons)" />
      </svg>
    </div>

    <div class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full border border-border bg-bg-surface/50 text-xs font-medium text-text-muted uppercase tracking-wider mb-6">
          <span class="w-1.5 h-1.5 rounded-full bg-silver animate-pulse"></span>
          Knowledge Base
        </div>
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
          Graphene Wiki
        </h1>
        <p class="text-xl text-text-secondary max-w-2xl mx-auto leading-relaxed">
          Everything you need to know about the world's thinnest, strongest,
          and most conductive material.
        </p>
      </div>

      <!-- Stats Bar -->
      <div class="grid grid-cols-4 gap-px bg-border rounded-lg overflow-hidden mb-16">
        <div class="bg-bg-surface p-6 text-center group hover:bg-bg-surface-light transition-colors">
          <div class="text-3xl md:text-4xl font-bold text-white mb-1 font-mono">0.3</div>
          <div class="text-xs text-text-muted uppercase tracking-wider">nm thick</div>
        </div>
        <div class="bg-bg-surface p-6 text-center group hover:bg-bg-surface-light transition-colors">
          <div class="text-3xl md:text-4xl font-bold text-white mb-1 font-mono">200x</div>
          <div class="text-xs text-text-muted uppercase tracking-wider">steel strength</div>
        </div>
        <div class="bg-bg-surface p-6 text-center group hover:bg-bg-surface-light transition-colors">
          <div class="text-3xl md:text-4xl font-bold text-white mb-1 font-mono">5000</div>
          <div class="text-xs text-text-muted uppercase tracking-wider">W/m-K thermal</div>
        </div>
        <div class="bg-bg-surface p-6 text-center group hover:bg-bg-surface-light transition-colors">
          <div class="text-3xl md:text-4xl font-bold text-white mb-1 font-mono">97.7%</div>
          <div class="text-xs text-text-muted uppercase tracking-wider">transparent</div>
        </div>
      </div>

      <!-- Featured Article - Large Card -->
      {featuredPage && (
        <a
          href={`/wiki/${featuredPage.slug}`}
          class="group block mb-8"
        >
          <div class="relative p-8 md:p-12 rounded-xl border border-border bg-gradient-to-br from-bg-surface via-bg-surface to-bg-surface-light overflow-hidden transition-all duration-300 hover:border-silver-dark hover:shadow-2xl hover:shadow-white/5">
            <!-- Decorative Element -->
            <div class="absolute top-0 right-0 w-64 h-64 opacity-5 transform translate-x-1/4 -translate-y-1/4">
              <svg viewBox="0 0 100 100" fill="currentColor">
                <polygon points="50,0 93.3,25 93.3,75 50,100 6.7,75 6.7,25" />
              </svg>
            </div>

            <div class="relative">
              <div class="flex items-center gap-3 mb-6">
                <span class="flex items-center justify-center w-10 h-10 rounded-lg bg-white/10 text-silver-light">
                  <Fragment set:html={pageMetadata['what-is-graphene'].icon} />
                </span>
                <span class="text-xs font-medium uppercase tracking-wider text-silver-dark">
                  Start Here
                </span>
              </div>

              <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 group-hover:text-silver-bright transition-colors">
                {featuredPage.title}
              </h2>

              <p class="text-lg text-text-secondary mb-6 max-w-2xl leading-relaxed">
                Discover what makes graphene the most revolutionary material of the 21st century.
                From its Nobel Prize-winning discovery to cutting-edge applications.
              </p>

              <div class="inline-flex items-center gap-2 text-silver group-hover:text-white transition-colors">
                <span class="font-medium">Read the fundamentals</span>
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>
          </div>
        </a>
      )}

      <!-- Topic Grid -->
      <div class="grid md:grid-cols-3 gap-px bg-border rounded-lg overflow-hidden mb-16">
        {otherPages.map((page) => {
          const meta = pageMetadata[page.slug] || { icon: '', tagline: '' };
          return (
            <a
              href={`/wiki/${page.slug}`}
              class="group bg-bg-surface p-8 hover:bg-bg-surface-light transition-all duration-200"
            >
              <div class="flex items-center gap-3 mb-4">
                <span class="flex items-center justify-center w-10 h-10 rounded-lg bg-bg-elevated text-silver group-hover:text-white group-hover:bg-white/10 transition-colors">
                  <Fragment set:html={meta.icon} />
                </span>
              </div>

              <h3 class="text-xl font-semibold text-silver-bright group-hover:text-white transition-colors mb-2">
                {page.title}
              </h3>

              <p class="text-sm text-text-muted mb-4">
                {meta.tagline}
              </p>

              <div class="flex items-center gap-1 text-xs text-silver-dark group-hover:text-silver transition-colors">
                <span>Explore</span>
                <svg class="w-3 h-3 transform group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </a>
          );
        })}
      </div>

      <!-- Bottom CTA Section -->
      <div class="grid md:grid-cols-2 gap-px bg-border rounded-lg overflow-hidden">
        <!-- Companies Directory -->
        <a href="/companies" class="group bg-bg-surface p-8 hover:bg-bg-surface-light transition-colors">
          <div class="flex items-start justify-between">
            <div>
              <div class="flex items-center gap-3 mb-3">
                <span class="flex items-center justify-center w-8 h-8 rounded-md bg-bg-elevated text-silver-dark group-hover:text-silver transition-colors">
                  <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M3 21h18M9 8h1m-1 4h1m4-4h1m-1 4h1M5 21V5a2 2 0 012-2h10a2 2 0 012 2v16"/>
                  </svg>
                </span>
                <h3 class="text-lg font-semibold text-silver-bright group-hover:text-white transition-colors">
                  Companies
                </h3>
              </div>
              <p class="text-sm text-text-muted">
                Explore graphene manufacturers, startups, and research institutions worldwide.
              </p>
            </div>
            <svg class="w-5 h-5 text-text-muted group-hover:text-silver transform group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </div>
        </a>

        <!-- Latest News -->
        <a href="/news" class="group bg-bg-surface p-8 hover:bg-bg-surface-light transition-colors">
          <div class="flex items-start justify-between">
            <div>
              <div class="flex items-center gap-3 mb-3">
                <span class="flex items-center justify-center w-8 h-8 rounded-md bg-bg-elevated text-silver-dark group-hover:text-silver transition-colors">
                  <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V9a2 2 0 012-2h2a2 2 0 012 2v9a2 2 0 01-2 2h-2z"/>
                  </svg>
                </span>
                <h3 class="text-lg font-semibold text-silver-bright group-hover:text-white transition-colors">
                  Latest News
                </h3>
              </div>
              <p class="text-sm text-text-muted">
                Stay updated with the latest breakthroughs, research, and industry developments.
              </p>
            </div>
            <svg class="w-5 h-5 text-text-muted group-hover:text-silver transform group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </div>
        </a>
      </div>

      <!-- Nobel Prize Callout -->
      <div class="mt-16 text-center">
        <blockquote class="max-w-3xl mx-auto">
          <p class="text-lg md:text-xl text-text-secondary italic leading-relaxed mb-4">
            "Graphene's properties are so remarkable that they belong in the realm of science fiction."
          </p>
          <cite class="text-sm text-text-muted not-italic">
            The Nobel Committee, 2010
          </cite>
        </blockquote>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
